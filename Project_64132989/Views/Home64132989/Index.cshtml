@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        /* General Styles */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }



        /* Features Section Styles */
        #features .card {
            transition: all 0.3s ease;
            border-radius: 15px;
            overflow: hidden;
        }

            #features .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
            }

        #features .card-body {
            padding: 2rem;
        }

        #features .bi {
            color: #004d99;
            margin-bottom: 1rem;
        }

        /* Call to Action Styles */
        .cta-section {
            background: linear-gradient(135deg, #004d99 0%, #0066cc 100%);
            color: white;
            padding: 60px 0;
            margin: 40px 0;
        }

            .cta-section .btn-primary {
                color: #004d99;
                border: none;
                padding: 12px 30px;
                font-weight: bold;
                transition: all 0.3s ease;
            }

                .cta-section .btn-primary:hover {
                    transform: scale(1.05);
                    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
                }

        /* Stats Section Styles */
        .stats-section {
            padding: 40px 0;
        }

        .stats-box {
            text-align: center;
            padding: 20px;
            border-radius: 10px;
            background: white;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

            .stats-box .bi {
                font-size: 2.5rem;
                color: #004d99;
                margin-bottom: 15px;
            }

        /* Footer Styles */
        .footer {
            background-color: #004d99;
            color: white;
            padding: 50px 0 20px;
        }

            .footer h5 {
                font-weight: bold;
                margin-bottom: 20px;
                position: relative;
                padding-bottom: 10px;
            }

                .footer h5::after {
                    content: '';
                    position: absolute;
                    left: 0;
                    bottom: 0;
                    width: 50px;
                    height: 2px;
                    background: white;
                }

            .footer ul li {
                margin-bottom: 10px;
            }

            .footer a {
                color: white;
                text-decoration: none;
                transition: all 0.3s ease;
            }

                .footer a:hover {
                    color: #ccc;
                    padding-left: 5px;
                }

            .footer .bi {
                margin-right: 10px;
            }

        .footer-bottom {
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            padding-top: 20px;
            margin-top: 40px;
        }

        /* Responsive Adjustments */
        @@media (max-width: 768px) {
            #features .card {
                margin-bottom: 20px;
            }

            .stats-box {
                margin-bottom: 20px;
            }
        }

        .program-card {
            transition: all 0.3s ease;
            border: none;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

            .program-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
            }

            .program-card .card-body {
                padding: 2rem;
            }

            .program-card ul li {
                margin-bottom: 0.5rem;
                display: flex;
                align-items: center;
            }

                .program-card ul li i {
                    color: #004d99;
                    margin-right: 0.5rem;
                }

            .program-card .card-title {
                color: #004d99;
                margin-bottom: 1.5rem;
                font-weight: bold;
            }

            .program-card .btn-outline-primary {
                color: #004d99;
                border-color: #004d99;
            }

                .program-card .btn-outline-primary:hover {
                    background-color: #004d99;
                    color: white;
                }

        @@media (max-width: 768px) {
            .program-card {
                margin-bottom: 20px;
            }
        }
    </style>
}