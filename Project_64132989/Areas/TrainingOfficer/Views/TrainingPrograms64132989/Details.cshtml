@model Project_64132989.Models.Data.TrainingProgram

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/TrainingOfficer/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink(" ", "Index", null, new { @class = "btn custom-btn bi bi-arrow-left fs-6" })
</p>
<h5>@Html.DisplayFor(model => model.program_id)</h5>
<h3 class="mb-3">@Html.DisplayFor(model => model.program_name)</h3>

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" aria-current="page">Thông tin về chương trình đào tạo</a>
    </li>
</ul>

<div class="card custom-shadow p-4 mt-4">
    <div class="row g-3">
        <!-- Khoa -->
        <div class="col-12 col-md-6 d-flex align-items-center">
            <div class="me-3">
                <i class="bi bi-building fs-4 text-primary"></i>
            </div>
            <div>
                <h6 class="mb-0">@Html.DisplayNameFor(model => model.Department.department_name)</h6>
                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Department.department_name)</p>
            </div>
        </div>

        <!-- Tên chương trình -->
        <div class="col-12 col-md-6 d-flex align-items-center">
            <div class="me-3">
                <i class="bi bi-mortarboard fs-4 text-success"></i>
            </div>
            <div>
                <h6 class="mb-0">@Html.DisplayNameFor(model => model.program_name)</h6>
                <p class="text-muted mb-0">@Html.DisplayFor(model => model.program_name)</p>
            </div>
        </div>

        <!-- Tổng số tín chỉ -->
        <div class="col-12 col-md-6 d-flex align-items-center">
            <div class="me-3">
                <i class="bi bi-calculator fs-4 text-warning"></i>
            </div>
            <div>
                <h6 class="mb-0">@Html.DisplayNameFor(model => model.total_credits)</h6>
                <p class="text-muted mb-0">@Html.DisplayFor(model => model.total_credits) tín chỉ</p>
            </div>
        </div>

        <!-- Phiên bản -->
        <div class="col-12 col-md-6 d-flex align-items-center">
            <div class="me-3">
                <i class="bi bi-code-square fs-4 text-info"></i>
            </div>
            <div>
                <h6 class="mb-0">@Html.DisplayNameFor(model => model.version)</h6>
                <p class="text-muted mb-0">@Html.DisplayFor(model => model.version)</p>
            </div>
        </div>

        <!-- Năm bắt đầu -->
        <div class="col-12 col-md-6 d-flex align-items-center">
            <div class="me-3">
                <i class="bi bi-calendar-check fs-4 text-success"></i>
            </div>
            <div>
                <h6 class="mb-0">@Html.DisplayNameFor(model => model.start_year)</h6>
                <p class="text-muted mb-0">@Html.DisplayFor(model => model.start_year)</p>
            </div>
        </div>

        <!-- Năm kết thúc -->
        <div class="col-12 col-md-6 d-flex align-items-center">
            <div class="me-3">
                <i class="bi bi-calendar-x fs-4 text-danger"></i>
            </div>
            <div>
                <h6 class="mb-0">@Html.DisplayNameFor(model => model.end_year)</h6>
                <p class="text-muted mb-0">@Html.DisplayFor(model => model.end_year)</p>
            </div>
        </div>

        <!-- Trạng thái -->
        <div class="col-12 col-md-6 d-flex align-items-center">
            <div class="me-3">
                <i class="bi bi-toggle-on fs-4 text-primary"></i>
            </div>
            <div>
                <h6 class="mb-0">@Html.DisplayNameFor(model => model.status)</h6>
                <p class="text-muted mb-0">
                    @if (Html.DisplayFor(model => model.status).ToString() == "1")
                    {
                        <span class="badge bg-success">Đang hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Ngừng hoạt động</span>
                    }
                </p>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a href="@Url.Action("Edit", new { id = Model.program_id })" class="btn btn-primary">Chỉnh sửa thông tin</a>
</div>
