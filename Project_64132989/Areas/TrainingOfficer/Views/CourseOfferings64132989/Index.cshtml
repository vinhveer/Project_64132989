@{
    ViewBag.Title = "Danh sách lớp học phần";
    Layout = "~/Areas/TrainingOfficer/Views/Shared/_Layout.cshtml";
}

<button type="button" class="btn custom-btn mb-4" onclick="showCreateOfferingsModal()">
    <i class="bi bi-arrow-repeat"></i> Thực hiện quá trình xếp lớp tự động
</button>
<h4>Danh sách lớp học phần</h4>

<select class="form-select form-control mb-3" id="semesterFilter">
    <option value="">Tất cả học kỳ</option>
</select>

<div id="toolbar">
    <a href="@Url.Action("Create")" class="btn custom-btn me-2">
        <i class="bi bi-plus-circle me-2"></i>Thêm lớp học phần mới
    </a>
    <button id="deleteSelectedBtn" class="btn custom-btn" style="color: red;">
        <i class="bi bi-trash me-2"></i>Xoá các mục đã chọn
    </button>
</div>

<table id="courseOfferingsTable"
       data-toolbar="#toolbar"
       data-search="true"
       data-show-refresh="true"
       data-show-toggle="true"
       data-show-fullscreen="true"
       data-show-columns="true"
       data-show-export="true"
       data-detail-view="false"
       data-click-to-select="true"
       data-pagination="true"
       data-side-pagination="server"
       data-url="@Url.Action("GetCourseOfferingList")"
       data-method="post"
       data-sort-name="offeringId"
       data-sort-order="asc"
       data-page-list="[10, 25, 50, 100]">
    <thead>
        <tr>
            <th data-field="state" data-checkbox="true"></th>
            <th data-field="offeringId" data-sortable="true">Mã lớp</th>
            <th data-field="courseId" data-sortable="true">Mã học phần</th>
            <th data-field="courseName" data-sortable="true">Tên học phần</th>
            <th data-field="semesterName" data-sortable="true">Học kỳ</th>
            <th data-field="teacherId" data-sortable="true">Giảng viên</th>
            <th data-field="roomName" data-sortable="true">Phòng học</th>
            <th data-field="maxCapacity" data-sortable="true">Sĩ số tối đa</th>
            <th data-field="status" data-sortable="true">Trạng thái</th>
            <th data-field="actions" data-formatter="actionFormatter"></th>
        </tr>
    </thead>
</table>

<!-- Modal tạo lớp học phần -->
<div class="modal fade" id="createOfferingsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tạo lớp học phần tự động</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Học kỳ</label>
                    <select id="createSemesterId" class="form-select custom-dropdown" required>
                        <option value="">Chọn học kỳ</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Sĩ số tối đa mỗi lớp</label>
                    <input type="number" id="maxStudentsPerClass" class="form-control"
                           value="40" min="1" max="100" required>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" onclick="createCourseOfferings()">
                    Thực hiện
                </button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-table@1.23.5/dist/bootstrap-table.min.css">

    <script src="https://cdn.jsdelivr.net/npm/tableexport.jquery.plugin@1.29.0/tableExport.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-table@1.23.5/dist/bootstrap-table.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-table@1.23.5/dist/bootstrap-table-locale-all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-table@1.23.5/dist/extensions/export/bootstrap-table-export.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Constants
        const currentUser = 'trittntu';
        const currentDate = '2024-12-29 20:29:25';

        var $table = $('#courseOfferingsTable');
        var createOfferingsModal;

        $(function() {
            // Khởi tạo modal
            createOfferingsModal = new bootstrap.Modal(document.getElementById('createOfferingsModal'));

            // Load danh sách học kỳ
            $.get('@Url.Action("GetSemesters", "StudentLearningPlans64132989")', function(data) {
                var filterSelect = $('#semesterFilter');
                var modalSelect = $('#createSemesterId');
                data.forEach(function(item) {
                    filterSelect.append(new Option(item.name, item.id));
                    modalSelect.append(new Option(item.name, item.id));
                });
            });

            // Khởi tạo bảng với queryParams
            $table.bootstrapTable({
                locale: 'vi-VN',
                queryParams: function(params) {
                    return {
                        search: params.search,
                        sort: params.sort,
                        order: params.order,
                        offset: params.offset,
                        limit: params.limit,
                        semesterId: $('#semesterFilter').val() || ''
                    };
                }
            });

            // Xử lý lọc theo học kỳ
            $('#semesterFilter').change(function() {
                $table.bootstrapTable('refresh', {
                    query: {
                        semesterId: $(this).val() || ''
                    }
                });
            });

            // Xử lý nút xóa nhiều
            $('#deleteSelectedBtn').click(function() {
                var selectedRows = $table.bootstrapTable('getSelections');
                if (selectedRows.length === 0) {
                    Swal.fire('Thông báo', 'Vui lòng chọn ít nhất một lớp học phần để xóa.', 'info');
                    return;
                }

                var offeringIds = selectedRows.map(function(row) {
                    return row.offeringId;
                });

                Swal.fire({
                    title: 'Xác nhận xóa',
                    text: `Bạn có chắc chắn muốn xóa ${selectedRows.length} lớp học phần đã chọn?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Đồng ý',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("DeleteMultiple")',
                            type: 'POST',
                            data: { ids: offeringIds },
                            success: function(response) {
                                if (response.success) {
                                    Swal.fire('Đã xóa!', 'Các lớp học phần đã chọn đã được xóa thành công.', 'success');
                                    $table.bootstrapTable('refresh');
                                } else {
                                    Swal.fire('Lỗi!', response.message, 'error');
                                }
                            },
                            error: function() {
                                Swal.fire('Lỗi!', 'Có lỗi xảy ra trong quá trình xóa.', 'error');
                            }
                        });
                    }
                });
            });
        });

        // Hàm format action buttons
        function actionFormatter(value, row) {
            return [
                '<div class="dropdown p-2">',
                '<button class="btn custom-btn btn-sm" type="button" onclick="toggleActionMenu(this, \'' + row.offeringId + '\')">',
                '<i class="bi bi-three-dots-vertical"></i>',
                '</button>',
                '</div>'
            ].join('');
        }

        // Hàm hiển thị action menu
        function toggleActionMenu(button, offeringId) {
            const existingDropdown = document.querySelector('.custom-action-dropdown');

            if (existingDropdown) {
                if (existingDropdown.dataset.offeringId === offeringId) {
                    existingDropdown.classList.add('fade-out');
                    setTimeout(() => existingDropdown.remove(), 200);
                    return;
                }
                existingDropdown.remove();
            }

            const dropdown = document.createElement('div');
            dropdown.className = 'dropdown-menu custom-action-dropdown show fade-in';
            dropdown.dataset.offeringId = offeringId;
            dropdown.style.position = 'absolute';
            dropdown.style.zIndex = '1100';
            dropdown.innerHTML = `
                <a class="dropdown-item" href="@Url.Action("Details")/${offeringId}">
                    <i class="bi bi-info-circle me-2"></i>Chi tiết
                </a>
                <a class="dropdown-item" href="@Url.Action("Edit")/${offeringId}">
                    <i class="bi bi-pencil me-2"></i>Chỉnh sửa
                </a>
                <a class="dropdown-item" href="javascript:void(0);" onclick="deleteOffering('${offeringId}')" style="color: red;">
                    <i class="bi bi-trash me-2"></i>Xóa
                </a>
            `;

            document.body.appendChild(dropdown);

            Popper.createPopper(button, dropdown, {
                placement: 'bottom-end',
                modifiers: [
                    {
                        name: 'offset',
                        options: {
                            offset: [0, 8],
                        },
                    },
                ],
            });

            const closeDropdown = (e) => {
                if (!dropdown.contains(e.target) && e.target !== button) {
                    dropdown.classList.add('fade-out');
                    setTimeout(() => dropdown.remove(), 200);
                    document.removeEventListener('click', closeDropdown);
                }
            };

            setTimeout(() => {
                document.addEventListener('click', closeDropdown);
            }, 0);
        }

        // Hàm xóa một lớp học phần
        function deleteOffering(offeringId) {
            Swal.fire({
                title: 'Xác nhận xóa',
                text: 'Bạn có chắc chắn muốn xóa lớp học phần này?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Đồng ý',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("Delete")',
                        type: 'POST',
                        data: { id: offeringId },
                        success: function(response) {
                            if (response.success) {
                                Swal.fire('Đã xóa!', 'Lớp học phần đã được xóa thành công.', 'success');
                                $table.bootstrapTable('refresh');
                            } else {
                                Swal.fire('Lỗi!', response.message, 'error');
                            }
                        },
                        error: function() {
                            Swal.fire('Lỗi!', 'Có lỗi xảy ra trong quá trình xóa.', 'error');
                        }
                    });
                }
            });
        }

        // Hàm hiện modal tạo lớp học phần
        function showCreateOfferingsModal() {
            createOfferingsModal.show();
        }

        // Hàm thực hiện tạo lớp học phần
        function createCourseOfferings() {
            const semesterId = $('#createSemesterId').val();
            const maxStudents = $('#maxStudentsPerClass').val();

            if (!semesterId) {
                Swal.fire('Lỗi', 'Vui lòng chọn học kỳ', 'error');
                return;
            }

            if (!maxStudents || maxStudents < 1) {
                Swal.fire('Lỗi', 'Vui lòng nhập sĩ số tối đa hợp lệ', 'error');
                return;
            }

            Swal.fire({
                title: 'Xác nhận',
                text: 'Bạn có chắc chắn muốn tạo lớp học phần tự động cho học kỳ này? Lưu ý: Việc tạo tự động học phần mới đồng nghĩa với việc các học phần cũ trong học kỳ này sẽ bị xoá. Hãy chắc chắn trước khi thao tác!',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Đồng ý',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Đang xử lý...',
                        html: 'Vui lòng chờ trong giây lát',
                        allowOutsideClick: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });

                    $.post('@Url.Action("CreateCourseOfferings", "CourseOfferings64132989")', {
                        semesterId: semesterId,
                        maxStudentsPerClass: maxStudents
                    })
                    .done(function(response) {
                        createOfferingsModal.hide();
                        if (response.success) {
                            Swal.fire('Thành công', response.message, 'success').then(() => {
                                $table.bootstrapTable('refresh');
                            });
                        } else {
                            Swal.fire('Lỗi', response.message, 'error');
                        }
                    })
                    .fail(function() {
                        Swal.fire('Lỗi', 'Đã xảy ra lỗi trong quá trình xử lý', 'error');
                    });
                }
            });
        }
    </script>
}