
@{
    ViewBag.Title = "UploadCourseList";
    Layout = "~/Areas/TrainingOfficer/Views/Shared/_Layout.cshtml";
}

<ul class="nav nav-tabs mb-4">
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Index", "Cours64132989")">Danh sách học phần</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="@Url.Action("UploadCourseList", "Cours64132989")">Tải lên danh sách học phần</a>
    </li>
</ul>

<h3 class="mb-3">Thêm học phần từ file</h3>

<p class="mb-3"><b>Bước 1: </b>Tải xuống danh sách học phần và thêm dữ liệu</p>

<a href="@Url.Action("DownloadTemplate", "Cours64132989")" class="btn btn-primary">
    <i class="bi bi-download me-2"></i>Tải xuống mẫu excel
</a>


<p class="mt-3"><b>Bước 2: </b>Tải lên file và chọn "Tải lên" để thêm vào hệ thống</p>

@using (Html.BeginForm("UploadCourseList", "Cours64132989", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="mb-3">
        @Html.Label("fileInput", "Chọn file Excel (.xls, .xlsx)", new { @class = "form-label" })
        @Html.TextBox("file", null, new { @class = "form-control", type = "file", required = "required", id = "fileInput" })
    </div>
    <button type="submit" class="btn btn-success">
        <i class="bi bi-upload me-2"></i>Tải lên
    </button>
}


@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger mt-4">
        @ViewBag.ErrorMessage
    </div>
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-4">
        @ViewBag.Message
    </div>
}