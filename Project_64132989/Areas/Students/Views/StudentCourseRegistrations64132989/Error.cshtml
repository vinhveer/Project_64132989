@model Project_64132989.Models.Data.Semester
@{
    ViewBag.Title = "Chưa đến thời gian đăng ký";
    Layout = "~/Areas/Students/Views/Shared/_Layout.cshtml";
}

<style>
    .error-page {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .error-card {
        background: #fff;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        max-width: 600px;
        width: 100%;
        padding: 2rem;
        text-align: center;
        animation: fadeIn 0.5s ease-in-out;
    }

    .error-icon {
        font-size: 4rem;
        color: #dc3545;
        margin-bottom: 1.5rem;
    }

    .countdown {
        background: #f8f9fa;
        border-radius: 0.5rem;
        padding: 1rem;
        margin: 1.5rem 0;
    }

    .countdown-number {
        font-size: 1.5rem;
        font-weight: bold;
        color: #0d6efd;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .error-actions {
        margin-top: 1.5rem;
    }

    .error-message {
        color: #6c757d;
        font-size: 1.1rem;
        margin: 1rem 0;
    }
</style>

<div class="container">
    <div class="error-page">
        <div class="error-card">
            <!-- Icon -->
            <div class="error-icon">
                <i class="bi bi-clock-history"></i>
            </div>

            <!-- Title -->
            <h2 class="mb-4">Chưa đến thời gian đăng ký</h2>

            <!-- Message -->
            <div class="error-message">
                <p class="mb-0">Xin lỗi, hệ thống đăng ký học phần chưa mở.</p>
                <p class="mb-0">Vui lòng quay lại sau.</p>
            </div>
        </div>
    </div>
</div>

