@model Project_64132989.Models.Data.Profile

@{
    ViewBag.Title = "Thông tin chi tiết giảng viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var userId = Html.DisplayFor(model => model.user_id);
}

<p>
    <a href="@Url.Action("Index")" class="btn custom-btn">
        <i class="bi bi-arrow-left fs-6"></i>
    </a>
</p>


<div class="card custom-shadow p-4">
    <div class="row">
        <div class="col-12 col-md-2 d-flex justify-content-center">
            <img src="@(string.IsNullOrEmpty(Model.avatar_path) ? "/Assets/anh.jpg" : Model.avatar_path)"
                 class="rounded-circle"
                 style="width: 7rem; height: 7rem; object-fit: cover;" />
        </div>
        <div class="col-12 col-md-10 mt-3 mt-md-0 d-flex align-items-md-center">
            <div class="text-center text-md-start w-100">
                <h3 class="mb-1">@Html.DisplayFor(model => model.last_name) @Html.DisplayFor(model => model.first_name)</h3>
                <h6 class="text-muted">@Html.DisplayFor(model => model.User.email)</h6>
            </div>
        </div>
    </div>
</div>
<ul class="nav nav-tabs mt-4">
    <li class="nav-item">
        <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Details" ? "active" : "")"
           href="@Url.Action("Details", "Teacher64132989", new { id = userId })">
            <i class="bi bi-info-circle me-2"></i> Thông tin sinh viên
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Edit" ? "active" : "")"
           href="@Url.Action("Edit", "Teacher64132989", new { id = userId })">
            <i class="bi bi-pencil-square me-2"></i> Thay đổi thông tin cá nhân
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "ChangePassword" ? "active" : "")"
           href="@Url.Action("ChangePassword", "Teacher64132989", new { id = userId })">
            <i class="bi bi-person-fill-lock me-2"></i> Đặt lại mật khẩu
        </a>
    </li>
</ul>


<div class="card custom-shadow p-4 mt-4">
    <div class="row g-3">
        <!-- Ngày sinh -->
        <div class="col-12 col-md-6 d-flex align-items-center">
            <div class="me-3">
                <i class="bi bi-calendar-event fs-4 text-primary"></i>
            </div>
            <div>
                <h6 class="mb-0">@Html.DisplayNameFor(model => model.date_of_birth)</h6>
                <p class="text-muted mb-0">@Html.DisplayFor(model => model.date_of_birth)</p>
            </div>
        </div>

        <!-- Giới tính -->
        <div class="col-12 col-md-6 d-flex align-items-center">
            <div class="me-3">
                <i class="bi bi-gender-ambiguous fs-4 text-success"></i>
            </div>
            <div>
                <h6 class="mb-0">@Html.DisplayNameFor(model => model.gender)</h6>
                <p class="text-muted mb-0">
                    @(Model.gender == 1 ? "Nam" : (Model.gender == 0 ? "Nữ" : "Khác"))
                </p>
            </div>
        </div>

        <!-- Số điện thoại -->
        <div class="col-12 col-md-6 d-flex align-items-center">
            <div class="me-3">
                <i class="bi bi-telephone fs-4 text-warning"></i>
            </div>
            <div>
                <h6 class="mb-0">@Html.DisplayNameFor(model => model.phone_number)</h6>
                <p class="text-muted mb-0">@Html.DisplayFor(model => model.phone_number)</p>
            </div>
        </div>

        <!-- Địa chỉ -->
        <div class="col-12 col-md-6 d-flex align-items-center">
            <div class="me-3">
                <i class="bi bi-geo-alt fs-4 text-danger"></i>
            </div>
            <div>
                <h6 class="mb-0">@Html.DisplayNameFor(model => model.address)</h6>
                <p class="text-muted mb-0">@Html.DisplayFor(model => model.address)</p>
            </div>
        </div>
    </div>
</div>
