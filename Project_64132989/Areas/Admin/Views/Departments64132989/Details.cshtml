@model Project_64132989.Models.Data.Department
@{
    ViewBag.Title = "Chi tiết phòng ban";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="mb-4">
    <a href="@Url.Action("Index")" class="btn custom-btn me-2">
        <i class="bi bi-arrow-left me-2"></i>Quay lại
    </a>
    <a href="@Url.Action("Edit", new { id = Model.department_id })" class="btn custom-btn">
        <i class="bi bi-pencil me-2"></i>Chỉnh sửa
    </a>
</div>

<h4 class="mb-3">Chi tiết phòng ban</h4>

<div class="row">
    <!-- Thông tin cơ bản -->
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title mb-4">
                    <i class="bi bi-info-circle me-2"></i>Thông tin cơ bản
                </h5>
                <div class="mb-3">
                    <label class="fw-bold">Mã khoa</label>
                    <p>@Model.department_id</p>
                </div>
                <div class="mb-3">
                    <label class="fw-bold">Tên khoa</label>
                    <p>@Model.department_name</p>
                </div>
                <div class="mb-3">
                    <label class="fw-bold">Mô tả:</label>
                    <p>@(string.IsNullOrEmpty(Model.description) ? "Không có mô tả" : Model.description)</p>
                </div>
                <div>
                    @if (Model.status == 1)
                    {
                        <span class="badge bg-success">Đang hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Không hoạt động</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Thống kê -->
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="row g-4">
                    <h5 class="card-title mb-1">
                        <i class="bi bi-graph-up me-2"></i>Thống kê
                    </h5>
                    <div class="col-md-6">
                        <div class="border rounded p-3 text-center">
                            <i class="bi bi-person-lines-fill fs-1 text-primary mb-2"></i>
                            <h3 class="mb-1">@Model.Teachers.Count</h3>
                            <p class="text-muted mb-0">Giảng viên</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded p-3 text-center">
                            <i class="bi bi-journal-text fs-1 text-success mb-2"></i>
                            <h3 class="mb-1">@Model.Courses.Count</h3>
                            <p class="text-muted mb-0">Học phần</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded p-3 text-center">
                            <i class="bi bi-people fs-1 text-info mb-2"></i>
                            <h3 class="mb-1">@Model.AdminClasses.Count</h3>
                            <p class="text-muted mb-0">Lớp hành chính</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="border rounded p-3 text-center">
                            <i class="bi bi-kanban fs-1 text-warning mb-2"></i>
                            <h3 class="mb-1">@Model.TrainingPrograms.Count</h3>
                            <p class="text-muted mb-0">Chương trình đào tạo</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>